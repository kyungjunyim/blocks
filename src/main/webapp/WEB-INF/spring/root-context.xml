<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->
	<context:property-placeholder
		location="classpath:application.properties" />
	<context:property-placeholder
		location="classpath:application.properties" />

<!-- DB CONFIGURATION -->
	<bean id="developDataSource"
		class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass"
			value="${datasource.driver-class-name}"></property>
		<property name="url" value="${datasource.url.develop}"></property>
		<property name="username"
			value="${datasource.username.develop}"></property>
		<property name="password"
			value="${datasource.password.develop}"></property>
	</bean>

	<bean id="releaseDataSource"
		class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass"
			value="${datasource.driver-class-name}"></property>
		<property name="url" value="${datasource.url.release}"></property>
		<property name="username"
			value="${datasource.username.release}"></property>
		<property name="password"
			value="${datasource.password.release}"></property>
	</bean>

	<!-- SqlSessionFactory Bean -->
	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="developDataSource" />
		<property name="mapperLocations"
			value="classpath:mappers/**/*mapper.xml" />
		<property name="configLocation"
			value="classpath:mybatis-config.xml" />
	</bean>

	<!-- Transaction -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="developDataSource" />
	</bean>

	<bean id="sampleDao"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface"
			value="com.jun.blocks.sample.dao.SampleDao" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>

	<!-- 멀티파트 리졸버 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="52428800" />
		<!-- property name="maxInMemorySize" value="52428800" / -->
		<property name="defaultEncoding" value="utf-8" />
	</bean>

	<context:component-scan
		base-package="com.jun.blocks.mapper"></context:component-scan>
	<context:component-scan
		base-package="com.jun.blocks.service"></context:component-scan>
</beans>